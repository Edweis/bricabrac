{

    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb",
	"prettier",
	"plugin:prettier/recommended"
    ],
    "parser": "babel-eslint",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "$Shape": null
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
	"flowtype",
	"react-hooks",
	"import",
	"prettier"
    ],
    "rules": {
	    "react/jsx-filename-extension": 0,
	    "react/jsx-curly-newline": 0,
 	    "react/jsx-one-expression-per-line": 0,
      "prettier/prettier": ["error", {
          "singleQuote": true
      }],
	    "react/destructuring-assignment": ["off"],
	    "prefer-destructuring": [
            "error",
            {
                "array": false,
                "object": true
            }
        ]

    },
    "settings": {
		"import/resolver": {
			"node": {
				"paths": ["src"],
				"alias": {
				       "_assets":"./src/assets",
                                       "_components":"./src/components",
                                       "_constants":"./src/constants",
                                       "_hooks":"./src/hooks"
				}
			}
		}
	}
}
