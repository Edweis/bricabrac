{

    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb",
	"prettier",
	"plugin:prettier/recommended"
    ],
    "parser": "babel-eslint",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
	"flowtype",
	"react-hooks",
	"prettier"
    ],
    "rules": {
	    "react/jsx-filename-extension": 0,
 	    "react/jsx-one-expression-per-line": 0,
            "prettier/prettier": "error"
    }
}
